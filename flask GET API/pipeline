pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('flask GET API') {
                    sh 'ls'
                    sh 'docker build -t flask -f Dockerfile .'
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                    sh "docker login -u sreeramulauday10@gmail.com -p July@072023"
                    sh "docker push sreeramulauday10@gmail.com/flask"
                }
            }
        }
    
}

