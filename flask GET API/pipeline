pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                dir('flask GET API') {
                    sh 'ls'
                    sh 'docker build -t flask -f Dockerfile .'
                }
            }
        }
        
        stage('Push to Docker Hub') {
            steps {
                    sh "docker login -u sreeramulauday10@gmail.com -p July@072023"
                    sh "docker tag flask edigauday/uday:flask"
                    sh "docker push edigauday/uday:flask"
                }
            }
            stage('Pull Docker Image on EC2') {
            steps {
                script {
                  
                    def EC2_HOST = '51.20.55.196'
                    def EC2_USER = 'ec2-redhat'
                    withCredentials([file(credentialsId: 'redhat_pemkey', variable: 'PRIVATE_KEY_FILE')]) {
                        sh """
                            chmod 400 \$PRIVATE_KEY_FILE
                            ssh -i \$PRIVATE_KEY_FILE -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null $EC2_USER@$EC2_HOST<< EOF
                            //ssh -i your-ssh-key.pem -o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null ubuntu@your-ec2-host 'sudo docker pull your-image:tag'

 

                            sudo docker login -u sreeramulauday10@gmail.com -p 'July@072023>>'
                            sudo docker pull edigauday/uday:flask
                            sudo docker run -d -p 5000:5000 edigauday/uday:flask
                        """
                    }
                }
            }
        }
    }
    
}

